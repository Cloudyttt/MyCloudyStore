<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.hznu.mycloudystore.UserFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:elevation="0dp">
            <ImageView
                android:id="@+id/userHeadImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/head_01"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text="" />
                <TextView
                    android:id="@+id/userPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnWallet"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="钱包"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/wallet"
                android:background="@drawable/shape_button_full"
                android:elevation="0dp">
            </Button>
            <Button
                android:id="@+id/btnShoppingcar"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="购物车"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/shoppingcar"
                android:background="@drawable/shape_button_full"
                android:elevation="0dp">
            </Button>
            <Button
                android:id="@+id/btnCoupon"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="优惠券"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/coupon"
                android:background="@drawable/shape_button_full"
                android:elevation="0dp">
            </Button>
            <Button
                android:id="@+id/btnSetting"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="设置"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/setting"
                android:background="@drawable/shape_button_full"
                android:elevation="0dp">
            </Button>
            <Button
                android:id="@+id/btnLogout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="注销"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/logout"
                android:background="@drawable/shape_button_full"
                android:elevation="0dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
